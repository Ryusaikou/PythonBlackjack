def Checkbet(credits, bet):
    try:
        bet = int(bet)

    except ValueError:
        print("You have entered something that is not a number, this game does not accept " + str(bet) + "'s")
        return False
    if bet > credits:
        print("You dont have enough credits for that bet")
        return False
    else:
        print("You have bet " + str(bet) + " Good Luck!")
        return True


def HitMe(deck, isDealer):
    if isDealer:
        print("The Dealer has drawn the " + deck[0].name)
    else:
        print ("You have drawn the " + deck[0].name)
    return deck.pop(0)


def HandValue(hand):
    returnValue = 0

    for x in hand:
        if x.isAce and 11 + returnValue <= 21:
            returnValue += 11
        else:
            returnValue += x.value
    return returnValue

def isBust(value):
    if value > 21:
        return True
    else:
        return False

def CheckState(handValue):
    if handValue == 21:
        return True
    else:
        return False
